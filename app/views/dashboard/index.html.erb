<div class="jumbotron">
	<h1 align="center" >Workout Lounge!</h1>
	<p align="center">Share your workouts with your friends and family</p>

	<div class="container">
	<div class="row">
		<div class="col-md-10">
			<h2>List of Members</h2>
			<%= will_paginate @athletes, renderer: BootstrapPagination::Rails, class: "pull-left paginate" %>
		</div>
	</div>
			<div class="row">
				<% @athletes.each do |athlete| %>	
				<div class="col-md-10 well member indexname">	
					<strong class='indexname2'><%= athlete.full_name %></strong>
					<% if current_user %>
			        <%= link_to "Follow", friendships_path(friend_id: athlete.id), method: :post, 
			              class: "btn btn-xs btn-primary pull-right" unless current_user.follows_or_same?(athlete) %>   	   
			    <% end %>
				</div>
				<% end %>
			</div>
	</div>
</div>	
				

